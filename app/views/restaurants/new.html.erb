<h1>New Restaurant Form</h1>

<%= link_to 'Back', restaurants_path %>

<% if @form_error %>
    <% @form_error.each do |error| %>
    <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for(@restaurant) do |f| %>

  <div class="field"></br>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :zip %><br />
    <%= f.text_field :zip %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit "Add Restaurant" %>
  </div>
<% end %>
